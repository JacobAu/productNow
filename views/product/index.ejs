<%- include("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to ProductNow</h1>
            <p>View our Products from around your region</p>
            <a class="btn btn-primary btn-lg" href="product/new">Add New Product</a>
        </div>
    </header>

    <h3>Available Products</h3>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% product.forEach(function(p){ %>
            <div class="card-group col-md-3 col-sm-6">
                <div class="card">
                    <img src="<%= p.image%>" class="img-fluid">
                    <div class="card-body">
                        <h4 class="card-title"> <%=p.name %> </h4>
                    </div>
                    <p> 
                        <a href="/product/<%=p._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div> 
            </div>
        <% }); %>
    </div>
</div>

<%- include("../partials/footer") %>