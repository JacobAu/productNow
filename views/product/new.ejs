<%- include("../partials/header") %>

<div class="container">
    <h1 style="text-align: center;">Create a new product</h1>
    <div class="row">
        <div style="width:30%; margin:32px auto;">
            <form action="/product" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="price/night" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="3" name="description" placeholder="description"></textarea>
                </div>
                <div class="form-group">
                    <input class="btn btn-large btn-success btn-block" type="submit">                     
                </div>
            </form>
            <a href="/product">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>