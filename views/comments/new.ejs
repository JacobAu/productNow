<%- include("../partials/header") %>

<div class="container">
    <h1 style="text-align: center;">Add new comment to <%= product.name %> </h1>
    <div class="row">
        <div style="width:30%; margin:32px auto;">
            <form action="/product/<%=product._id%>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <input class="btn btn-large btn-success btn-block" type="submit">                     
                </div>
            </form>
            <a href="/product">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>