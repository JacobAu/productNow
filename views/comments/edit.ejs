<%- include("../partials/header") %>

<div class="container">
    <h1 style="text-align: center;">Edit Comment</h1>
    <div class="row">
        <div style="width:30%; margin:32px auto;">
            <form action="/product/<%=product_id%>/comments/<%=comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
                </div>
                <div class="form-group">
                    <input class="btn btn-large btn-success btn-block" type="submit">                     
                </div>
            </form>
            <a href="/product/<%=product_id%>">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>