<%- include("../partials/header") %>

<div class="container">
    <h1 style="text-align: center;">Edit <%=campground.name%></h1>
    <div class="row">
        <div style="width:30%; margin:32px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" value="<%=campground.name%>"type="text" name="campground[name]" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=campground.image%>" name="campground[image]" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" value="<%=campground.price%>" name="campground[price]" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="3" name="campground[description]" placeholder="description"><%=campground.description %></textarea>
                </div>
                <div class="form-group">
                    <input class="btn btn-large btn-success btn-block" type="submit">                     
                </div>
            </form>
            <a href="/campgrounds/<%=campground._id%>">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>