<%- include("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Yelpcamp</h1>
            <p>View our handpicked campgrounds from all over the world</p>
            <a class="btn btn-primary btn-lg" href="campgrounds/new">Add New Campground</a>
        </div>
    </header>

    <h3>Available Campgrounds</h3>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="card-group col-md-3 col-sm-6">
                <div class="card">
                    <img src="<%= campground.image%>" class="img-fluid">
                    <div class="card-body">
                        <h4 class="card-title"> <%=campground.name %> </h4>
                        <!-- <p class="card-text"> <%=campground.description%> </p> -->
                    </div>
                    <p> 
                        <a href="/campgrounds/<%=campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div> 
            </div>
        <% }); %>
    </div>
</div>

<%- include("../partials/footer") %>